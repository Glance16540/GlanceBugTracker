@model GlanceBugTracker.Models.ChangeNameViewModel
@{
    ViewBag.Title = "ChangeName";
}

<h2>Change Your Name!</h2>
@using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Name Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
   
    <div class="form-group">
        Change Your First Name
        @Html.LabelFor(m => m.NewName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.NewName, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Name" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
